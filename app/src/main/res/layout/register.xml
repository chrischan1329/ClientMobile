<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context=".register">

    <EditText
        android:id="@+id/usernameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameField"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:hint="Password"
        android:inputType="text" />

    <Spinner
        android:id="@+id/jenis_mobilField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/passwordField"
        android:inputType="textShortMessage"
        android:text="Jenis Mobil"/>

    <Button
        android:id="@+id/registerField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/jenis_mobilField"
        android:inputType="text"
        android:text="Register"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Register here"
        android:layout_below="@id/registerField"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/copyrightview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright Â© 2023"
        android:layout_below="@id/textView"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/icon"
        android:layout_centerHorizontal="true" />

</RelativeLayout>